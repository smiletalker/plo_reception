.acti_art1{
    float: left;
}
.acti_art2{
    float: left;
    height: 250px;
    width: 800px;
}
.acti_art2_content{
     margin: 35px;
}
.acti_art2_content a{
    color: black;
}
.acti_art2_content h3{
    font-weight: lighter;
}
.art2_content_word{
    margin-top: 20px;
}

.our_tittle{
    margin-left: 37%;
    margin-bottom: 50px;
}
.our_tittle h2{
    margin-left: 70px;
    font-weight: lighter;
}
