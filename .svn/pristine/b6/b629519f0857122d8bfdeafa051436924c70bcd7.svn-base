    color: white;
    letter-spacing: 2px;
}
.blog_header_word h1{
    color: white;
    font-size: 80px;
    font-weight: lighter;
}
.blog_header_word p:nth-last-child(1){
    height: 3px;
    background-color: #008ca8;
    width: 150px;
