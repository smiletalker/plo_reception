/*按钮hover样式*/
.butHoverCss{
    --color: white;
    --hover: rgb(0,140,168);
    height: 40px;
    width: 150px;
    background-color: black;
    border-color: black;
    margin-top: 15px;
}
.butHoverCss:hover, .butHoverCss:focus {
    border-color: var(--hover);
    box-shadow: inset 12em 0 0 0 var(--hover);
    cursor: pointer;
    color: white;
}
.butHoverCss{
    color: var(--color);
    -webkit-transition: 0.25s;
    transition: 0.25s;
}

