* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font: normal 14px / 20px "FuturaPT-Book", Helvetica, sans-serif;
}
ul li {
    list-style: none;
}


a {
    text-decoration: none;
}

a:hover {
    text-decoration: none;
}
img,input {
    /*vertical-align: bottom!important;*/
}

label {
    cursor: pointer;
    display: inline;
    max-width: 100%;
    margin-bottom: 0;
    font-weight: normal;
}

.marginAuto {
    margin-left: auto;
    margin-right: auto;
}

