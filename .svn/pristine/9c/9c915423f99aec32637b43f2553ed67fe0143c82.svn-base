body, h1, h2, h3, h4, h5, h6, hr, p, blockquote, dl, dt, dd, ul, ol, li, pre, form, fieldset, legend, button, input, textarea, th, td{
    margin:0; padding:0;
}

@font-face {
    font-family: 'iconfont';
    src: url('../font/iconfont.eot');
    src: url('../font/iconfont.eot?#iefix') format('embedded-opentype'),
    url('../font/iconfont.woff') format('woff'),
    url('../font/iconfont.ttf') format('truetype'),
    url('../font/iconfont.svg#iconfont') format('svg');
}

.iconfont{
    font-family:"iconfont" !important;
    font-size:16px;
    font-style:normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;
}

header{
    /*z-index: 2!important;*/
    position: absolute  !important;
    top:-20px !important;
}

.container{
    display: block;
    margin-top:80px;
}

footer{
    position: relative !important;
    margin-top:900px;
}

.header_img{
    height: 205px;
    width: 100%;
    background-image: url("../images/Repair/5.jpg");
}

.header_theme{
    position: absolute;
    font-size:50px;
    color:white;
    font-weight: 200;
    top:150px;
    left:150px;
}

.header{
    position: relative;
    height: 50px;
    width: 90%;
    background-color: #1F1F1F;
    margin: 55px auto;
}

.header ul{
    padding-top:10px;
    margin:10px auto;
    height: 50px;
    width:40%;
}

.header ul li{
    float: left;
    width:16%;
    height:30px;
    margin:0 2%;
    list-style: none;
    font-size: 14px;
    color: white;
}

.header ul li p{
    height: 3px;
    background-color: #008ca8;
    margin-top: 10px;
    transition: all .2s linear;
    width: 0px;
}

/*默认选中页面下滑线标识*/
.header ul li .fourth{
    width: 55px;
}

.header ul li:hover{
    color:#008ca8;
    cursor: pointer;
}

.header ul li:hover p{
    width: 55px;
}

.header ul li:nth-child(4){
    position: relative;
}

/*默认选中页面下件投诉标识*/
.header ul li span{
    position: absolute;
    color:rgb(29,29,29);
    font-size:25px;
    font-weight:500;
    top:50px;
    left:15px;
}

/*内容*/
.content{
    position: absolute;
    width:90%;
    margin:5%;
    height:1000px;
}

/*左边正文内容*/
.leftSection{
    width:75%;
    float: left;
}

/*内容*/
.list {
    float: left;
    width: 25%;
    margin-top: 10px;
    padding-left: 50px;
    padding-right:30px;
}

hr {
    box-sizing: content-box;
    height: 0;
    margin: 15px 0;
    border: 0;
    border-top: 1px solid #ddd;
}

.right {
    position: absolute;
    right: 10px;
    font-size: 12px;
}

.listMenu {
    padding: 5px 15px;
    cursor: pointer;
    font-size: 13px;
    letter-spacing: 1px;
    position: relative;
    color:#1F1D1D;
    font-weight: 700;
}

.listSub {
    padding-left: 30px;
    margin-top: 20px;
}
.listSub li{
    list-style: none;
}
a {
    font-size: 13px;
    font-weight: normal;
    color: #8D8B8B;
}

a:hover {
    color: #008ca8;
}

.color{
    height: 70px;
    width: 200px;
}
.color li{
    list-style: none;
}

.color li:nth-child(1){
    height: 20px;
    width: 20px;
    background-color: #999999;
    border-radius: 100%;
}
