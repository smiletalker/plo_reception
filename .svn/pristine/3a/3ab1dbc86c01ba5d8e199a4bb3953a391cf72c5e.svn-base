/*按钮hover样式*/
.butHoverCss{
  --color: #fff;
  --hover: rgb(0,140,168);
}
.butHoverCss:hover, .butHoverCss:focus {
  border-color: var(--hover);
  color: #fff;
  box-shadow: inset 18em 0 0 0 var(--hover);
}
#our_btn{
  color: var(--color);
  -webkit-transition: 0.25s;
  transition: 0.25s;
  background-color:rgb(31,29,29) ;
