.collection{
    width: 200px;
    height: 270px;
    /*outline: 1px #b4b4b4 solid;*/
    text-align: center;
    position: relative;
}
.collection>a{
    float: left;
    /*outline: 1px #b4b4b4 solid;*/
    width: 100%;
    height: 174px;
    line-height: 174px;
}
.collection>a>img{
    width: 60%;
}
.collection>span{
    font-size: 14px;
    font-weight: lighter;
    width: 100%;
    margin-top: 10px;
}
.collection>span:nth-of-type(2){
    /*outline: 1px #37b448 solid;*/
    position: absolute;
    bottom: 40px;
    left: 0;
    letter-spacing: 2px;
}
.collection>span:last-child{
    margin-bottom: 15px;
    font-size: 12px;
    /*outline: 1px #37b448 solid;*/
    position: absolute;
    bottom: 0;
    left: 0;
}
.collection>span:nth-of-type(1){
    width: 10%;
    text-align: center!important;
    padding-right: 8px;
    margin-top: 5px;
    cursor: pointer;
    visibility: hidden;
    /*outline: 1px #37b448 solid;*/
}