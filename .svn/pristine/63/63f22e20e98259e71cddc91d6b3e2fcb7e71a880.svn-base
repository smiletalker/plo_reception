/*账户信息*/
.myMsg{
    height: 900px;
}
#msg{
    width: 100%;
    height: 400px;/*600 900*/
    /*outline: 1px solid saddlebrown;*/
}
.myMsgInput{
    width: 100%;
    height: 70px;
    /*outline: 1px solid green;*/
    margin-bottom: 13px;
}
.myMsgInput>label{
    width: 100%;
}
.myMsgInput>input{
    width: 50%;
    height: 45px;
}
/*复选框*/
.remember{
    margin-top: 6px;
    font-size: 14px;
    height: 20px;
}
/*复选框样式*/
input[type="checkbox"]{
    -webkit-appearance:none;
    width: 13px;
    height: 13px;
    /*float: left;*/
    border:1px solid black;
    background-color: rgb(255, 255, 255);
    margin-top: 3px;
    margin-right: 8px;
    position: relative;
    cursor: pointer;
}
input[type="checkbox"]:focus{
    outline: none;
}
input[type="checkbox"]+label{
    cursor: pointer;
}
input[type="checkbox"]:checked::after{
    content: '\2714';
    color: rgb(0,140,168);
    font-weight: bold;
    font-size: 12px;
    border: none;
    position: absolute;
    top: -3px;
    left: 0;
}
/*更改电子邮件*/
.email,.password,#upEmailTitle{
    display: none;
}
.upEmail{
    width: 100%;
    /*height: 205px;*/
    /*outline: 1px solid pink;*/
    margin-top: 15px;
}
.upEmail>p{
    font-size: 20px;
    border-bottom: 1px solid #ece3e3;
    padding-bottom: 3px;
    margin-bottom: 20px;
}
.upEmail>div{
    width: 100%;
    margin-bottom: 15px;
}
.upEmail>div>label{
    width: 100%;
}
.upEmail>div>input{
    width: 50%;
    height: 45px;
}
.redSpan{
    line-height: 42px;
    margin-left: 3%;
    color: red;
}
.greenSpan{
    line-height: 42px;
    margin-left: 3%;
    color: green;
    font-size: 24px;
}
/*提交按钮*/
.butEmail{
    width: 80px;
    height: 35px;
    background-color: black;
    color: white;
    border: none;
    cursor: pointer;
    margin-top: 15px;
}
.butEmail:focus{
    outline: none;
}
/*按钮hover样式*/
.butHoverCss{
    --color: #fff;
    --hover: rgb(0,140,168);
}
.butHoverCss:hover,.butHoverCss:focus {
    border-color: var(--hover);
    color: #fff;
    box-shadow: inset 6.5em 0 0 0 var(--hover);
}
.butHoverCss{
    color: var(--color);
    -webkit-transition: 0.25s;
    transition: 0.25s;
}
